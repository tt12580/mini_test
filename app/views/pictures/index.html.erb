<div class="tt">
  <div class="col-lg-8">
    <div id="pictures">
      <%= render @pictures %>
    </div>
  </div>
  <div class="col-lg-8">
    <%= paginate @pictures %>
  </div>
  <div class="col-lg-8">
    <%= form_for Picture.new do |f| %>
    <%= f.label :image, "Upload pictures:" %>
    <%= f.file_field :image, multiple: true, name: "picture[image]", remote: true %>
    <% end %>
  </div>

</div>

<script type="text/javascript">
  <% Picture.all.each do |picture| %>
    $(document).ready(function() {
      $('#picture_<%= picture.id %>').click(function() {
        $(this).toggleClass("red");
    });
  <% end %>
</script>
