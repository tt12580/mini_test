<%= simple_form_for(@picture, html: {multipart: true}) do |f| %>
  <div class="col-lg-8">
    <%= f.input :name, label: "名字", class: "form-control" %>
  </div>
  <div class="col-lg-8">
    <%= f.label :image, "图片" %>
    <%= f.file_field :image, multiple: true, name: "picture[image]" %>
  </div>
  <div class="col-lg-12">
    <%= f.submit "创建", class: "btn btn-sm btn-primary" %>
  </div>
<% end %>
